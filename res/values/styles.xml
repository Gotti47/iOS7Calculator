<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="splashfull" parent="android:Theme">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="button_number_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">0.0001dp</item>
        <item name="android:layout_marginLeft">0.0001dp</item>
        <item name="android:layout_marginRight">0.0001dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">0sp</item>
        <item name="android:textColor">#000002</item>
        <item name="android:background">@drawable/button_number_selector</item>
    </style>

    <style name="button_operation_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">0.0001dp</item>
        <item name="android:layout_marginLeft">0.0001dp</item>
        <item name="android:layout_marginRight">0.0001dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">0sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:background">@drawable/button_operation_selector</item>
    </style>

    <style name="button_zero_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">0.0001dp</item>
        <item name="android:layout_marginRight">0.0001dp</item>
        <item name="android:layout_marginTop">0.0001dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:textSize">0sp</item>
        <item name="android:textColor">#000002</item>
        <item name="android:background">@drawable/button_number_selector</item>
    </style>

</resources>