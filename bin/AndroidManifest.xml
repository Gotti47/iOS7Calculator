<!-- 
Here is the manifest file,if you add a new Activity make 
sure you declare it here -->

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gottibujiku.android.ios7cal.app"
    android:versionCode="1"
    android:versionName="1.0" >

    <!-- Our application will run on any version from Froyo (Android 2.2) to
    Android 4.4 KitKat -->
    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Black.NoTitleBar" >
        <activity
            android:name="com.gottibujiku.android.ios7cal.app.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>


